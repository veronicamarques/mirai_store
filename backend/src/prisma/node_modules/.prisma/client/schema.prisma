datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Users {
  id        String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  active    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id     String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  number String @unique
  userid String
  type   Int
}
